{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["plugin:react/recommended", "airbnb", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "react/jsx-indent": [
            2,
            4,
            { "checkAttributes": true, "indentLogicalExpressions": true }
        ],
        "import/no-unresolved": "off",
        "no-console": "error"
    }
}
